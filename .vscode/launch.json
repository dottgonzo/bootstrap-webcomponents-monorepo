  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "runtimeVersion": "16.14.0",
      "name": "dev streamingtable",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/packages/streamingtable"
    },
    {
      "type": "node",
      "request": "launch",
      "runtimeVersion": "16.14.0",
      "name": "dev site",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/site"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:6006",
      "webRoot": "${workspaceFolder}/storybook"
    },
    {
      "name": "Launch Storybook",
      "request": "launch",
      "runtimeVersion": "16.14.0",
      "runtimeArgs": ["run", "storybook"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "cwd": "${workspaceFolder}/storybook"
    }
  ],
  "compounds": [
    {
      "name": "Storybook with chrome",
      "configurations": ["Launch Storybook", "Launch Chrome"]
    }
  ]
