{
  "$ref": "#/definitions/Component",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Component": {
      "additionalProperties": false,
      "properties": {
        "headers": {
          "$ref": "#/definitions/IHeaders"
        },
        "items": {
          "items": {
            "$ref": "#/definitions/IItem"
          },
          "type": "array"
        },
        "printer": {
          "enum": [
            "yes",
            "no"
          ],
          "type": "string"
        }
      },
      "required": [
        "printer",
        "items",
        "headers"
      ],
      "type": "object"
    },
    "ICompany": {
      "additionalProperties": false,
      "properties": {
        "address": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "iban": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "piva": {
          "type": "string"
        }
      },
      "required": [
        "piva",
        "name",
        "address",
        "email",
        "phone"
      ],
      "type": "object"
    },
    "IHeaders": {
      "additionalProperties": false,
      "properties": {
        "category": {
          "enum": [
            "items",
            "services"
          ],
          "type": "string"
        },
        "country": {
          "enum": [
            "it",
            "eu",
            "us"
          ],
          "type": "string"
        },
        "date": {
          "format": "date-time",
          "type": "string"
        },
        "expirationDate": {
          "format": "date-time",
          "type": "string"
        },
        "from": {
          "additionalProperties": false,
          "properties": {
            "address": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "iban": {
              "type": "string"
            },
            "logo": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "phone": {
              "type": "string"
            },
            "piva": {
              "type": "string"
            },
            "shortName": {
              "type": "string"
            }
          },
          "required": [
            "address",
            "email",
            "logo",
            "name",
            "phone",
            "piva",
            "shortName"
          ],
          "type": "object"
        },
        "serial": {
          "type": "string"
        },
        "to": {
          "$ref": "#/definitions/ICompany"
        }
      },
      "required": [
        "serial",
        "from",
        "to"
      ],
      "type": "object"
    },
    "IItem": {
      "additionalProperties": false,
      "properties": {
        "desc": {
          "type": "string"
        },
        "discount": {
          "additionalProperties": false,
          "properties": {
            "includeVat": {
              "type": "boolean"
            },
            "type": {
              "enum": [
                "gross",
                "item"
              ],
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        "quantity": {
          "type": "number"
        },
        "taxPercentage": {
          "type": "number"
        },
        "unit": {
          "type": "string"
        },
        "unitaryPrice": {
          "type": "number"
        }
      },
      "required": [
        "desc",
        "unitaryPrice",
        "taxPercentage"
      ],
      "type": "object"
    }
  }
}
